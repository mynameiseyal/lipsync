{
  "project_settings": {
    "name": "Multi-Speaker Lip-Sync Generator",
    "version": "1.0.0",
    "author": "AI Video Creator"
  },
  "paths": {
    "wav2lip_repo": "models/Wav2Lip",
    "wav2lip_checkpoint": "models/Wav2Lip/checkpoints/wav2lip_gan.pth",
    "face_detection_model": "models/face_detection.pth",
    "temp_dir": "temp",
    "output_dir": "output"
  },
  "processing": {
    "max_resolution": [1920, 1080],
    "default_resolution": [720, 480],
    "default_fps": 25,
    "audio_sample_rate": 22050,
    "face_padding": [10, 10, 10, 10],
    "face_detection_threshold": 0.8
  },
  "tts_settings": {
    "engine": "neural",
    "fallback_engine": "gtts",
    "default_language": "en",
    "default_provider": "coqui",
    "neural_model": "tts_models/en/ljspeech/vits",
    "available_models": [
      "tts_models/en/ljspeech/vits",
      "tts_models/en/ljspeech/tacotron2-DDC",
      "tts_models/en/vctk/vits", 
      "tts_models/en/ljspeech/glow-tts",
      "tts_models/en/sam/tacotron-DDC"
    ],
    "voice_providers": {
      "coqui": {
        "enabled": true,
        "models": {
          "male": [
            "tts_models/en/vctk/vits",
            "tts_models/en/sam/tacotron-DDC",
            "tts_models/en/ljspeech/tacotron2-DDC"
          ],
          "female": [
            "tts_models/en/ljspeech/vits",
            "tts_models/en/ljspeech/glow-tts",
            "tts_models/en/vctk/vits"
          ]
        }
      },
      "elevenlabs": {
        "enabled": false,
        "voices": {
          "male": ["Adam", "Antoni", "Arnold", "Clyde", "Dom", "Josh", "Sam"],
          "female": ["Bella", "Charlotte", "Dorothea", "Emily", "Grace", "Rachel", "Sarah"]
        }
      },
      "azure": {
        "enabled": false,
        "voices": {
          "male": ["en-US-GuyNeural", "en-US-DavisNeural", "en-GB-RyanNeural"],
          "female": ["en-US-JennyNeural", "en-US-AriaNeural", "en-GB-SoniaNeural"]
        }
      },
      "google": {
        "enabled": false,
        "voices": {
          "male": ["en-US-Standard-B", "en-US-Wavenet-B", "en-US-Wavenet-D"],
          "female": ["en-US-Standard-A", "en-US-Wavenet-A", "en-US-Wavenet-C"]
        }
      },
      "amazon": {
        "enabled": false,
        "voices": {
          "male": ["Matthew", "Justin", "Kevin", "Joey"],
          "female": ["Joanna", "Salli", "Kendra", "Kimberly"]
        }
      }
    },
    "speed_factor": 1.0,
    "volume_factor": 1.0,
    "gpu_batch_size": 8
  },
  "background_settings": {
    "removal_model": "u2net",
    "blur_background": false,
    "background_opacity": 1.0,
    "speaker_size_ratio": 0.6,
    "composition_style": "overlay"
  },
  "gpu_settings": {
    "enabled": true,
    "device": "auto",
    "memory_fraction": 0.8,
    "allow_growth": true,
    "mixed_precision": true,
    "batch_size": 4,
    "num_workers": 4,
    "pin_memory": true,
    "fallback_to_cpu": true,
    "optimization_level": "O1"
  },
  "video_encoding": {
    "gpu_codec": "h264_nvenc",
    "cpu_codec": "libx264", 
    "gpu_preset": "fast",
    "cpu_preset": "medium",
    "max_bitrate": "8000k",
    "buffer_size": "10000k",
    "cpu_threads": 4
  },
  "advanced": {
    "gpu_acceleration": true,
    "batch_processing": true,
    "cleanup_temp": true,
    "debug_mode": false,
    "memory_efficient": true,
    "use_cuda_kernels": true,
    "async_processing": true
  }
} 